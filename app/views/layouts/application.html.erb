<!DOCTYPE html>
<html>
<head>
  <title>String Replacer Web</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<!-- Fixed navbar -->
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'String Replacer', root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <%= nav_link 'Templates', templates_path, 'active' %>
        <%= nav_link 'Values', values_path, 'active' %>
        <%= nav_link 'Replacements', replacements_path, 'active' %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>

<!-- Begin page content -->
<div class="container">

  <%= yield %>

</div>

<footer class="footer">
  <div class="container">
    <p class="text-muted">
      Stelios Omirou, Copyright 2015</p>
  </div>
</footer>

</html>
