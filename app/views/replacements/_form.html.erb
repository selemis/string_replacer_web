<div class="well">
  <%= form_for(@replacement, html: {class: 'form-horizontal'}) do |f| %>
      <% if @replacement.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@replacement.errors.count, "error") %> prohibited
              this replacement from being saved:</h2>

            <ul>
              <% @replacement.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.label :label, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :label, autofocus: true, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :template_id, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= collection_select(:replacement, :template_id, @templates, :id, :label, {prompt: false}, class: 'form-control') %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :value_id, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= collection_select(:replacement, :value_id, @values, :id, :label, {prompt: false}, class: 'form-control') %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>

  <% end %>
</div>
