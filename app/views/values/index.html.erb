<div class="page-header">
  <h1>Listing values</h1>
</div>

<table class="table table-hover table-striped ">
  <thead>
  <tr>
    <th>Label</th>
    <th>Content</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @values.each do |value| %>
      <tr>
        <td><%= value.label %></td>
        <td><%= simple_format(truncate(value.content, length: 40)) %></td>
        <td>
          <%= link_to 'Show', value, class: 'btn btn-info btn-xs' %>
          <%= link_to 'Edit', edit_value_path(value), class: 'btn btn-primary btn-xs' %>
          <%= link_to 'Destroy', value, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Value', new_value_path, class: 'btn btn-primary' %>
