<div class="page-header">
  <h1>Listing templates</h1>
</div>

<table class="table table-hover table-striped ">
  <thead>
  <tr>
    <th>Label</th>
    <th>Content</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @templates.each do |template| %>
      <tr>
        <td><%= template.label %></td>
        <td><%= simple_format(truncate(template.content, length: 40)) %></td>
        <td>
          <%= link_to 'Show', template, class: 'btn btn-info btn-xs' %>
          <%= link_to 'Edit', edit_template_path(template), class: 'btn btn-primary btn-xs' %>
          <%= link_to 'Destroy', template, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Template', new_template_path, class: 'btn btn-primary' %>
